{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div class="p-5">
    {{#with heading}}
    <div class="card mb-3">
        <div class="card-body">
            {{#with main}}
            <h1>{{title}}</h1>
            <p>{{text}} </p>
            <div>
                <button type="button" class="btn btn-primary">{{button_text.solid}}</button>
            </div>
            <br>
            <div>
                <button type="button" class="btn btn-outline-primary">{{button_text.outline}}</button>
            </div>
            {{/with}}
        </div>
    </div>

    <div class="card mb-3">
        <div class="card-body">
            {{#with second}}
            <h2>{{title}}</h2>
            <p>{{text}} </p>
            <div>
                <button type="button" class="btn btn-secondary">{{button_text.solid}}</button>
            </div>
            <br>
            <div>
                <button type="button" class="btn btn-outline-secondary">{{button_text.outline}}</button>
            </div>
            {{/with}}
        </div>
    </div>

    <div class="card mb-3">
        <div class="card-body">
            {{#with subblock}}
            <h3>{{title}}</h3>
            <p>{{text}} </p>
            <div>
                <button type="button" class="btn btn-dark">{{button_text.solid}}</button>
            </div>
            <br>
            <div>
                <button type="button" class="btn btn-outline-dark">{{button_text.outline}}</button>
            </div>
            {{/with}}
        </div>
    </div>
    {{/with}}

    {{#with nested_display}}
    <div class="card mb-3">
        <div class="card-body">
            <div class="display-1">{{title}}</div>
            <div class="card">
                <div class="card-body">
                    <div class="display-4">{{children_display.title}}</div>
                    <p>{{text}} </p>
                    <div>
                        <button type="button" class="btn btn-outline-warning">{{children_display.button.text}}</button>
                    </div>
                </div>
            </div>
            <br>
            <h6>{{header_text}}</h6>
            <div>
                <button type="button" class="btn btn-info">{{button.text}}</button>
            </div>
        </div>
    </div>
    {{/with}}

    {{#with paragraph}}
    <div class="card mb-3">
        <div class="card-body">
            <p class="text-uppercase">{{title}} </p>
            <p class="text-lowercase">{{text}} </p>
            <div>
                <a href="{{button.url}}" class="btn btn-link">{{button.text}}</a>
            </div>
            <ul class="card">
                {{#each list_name}}
                <li class="card-body">
                    <a href="{{url}}">{{text}}</a>
                </li>
                {{/each}}

            </ul>
        </div>
    </div>
    {{/with}}
</div>

