{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    <h1>My mac</h1>
    <hr>

    <h2>Name {{name}} </h2>
    <div>Model - {{description}} ({{category}})</div>
    <div>price - {{price}} $ </div>
    <br>
    <div>
        {{> title data="Features of MacBook Pro"}}
        {{#with features}}
        <div>
            {{#with processor}}
            <div><strong class="badge text-bg-success">Processor: </strong> {{brand}} {{model}}, {{cores}} cores
                {{speed}}, cache {{cache}} </div>
            {{/with}}
        </div>
        <br>
        <div>
            {{#with memory}}
            <div><strong class="badge text-bg-success">Memory: </strong> {{type}} {{size}}, {{speed}} </div>
            {{/with}}
        </div>
        <br>
        <div>
            {{#with storage}}
            <div><strong class="badge text-bg-success">Storage: </strong> {{type}} {{size}}</div>
            {{/with}}
        </div>
        <br>
        <div>
            {{#with display}}
            <div><strong class="badge text-bg-info">Display: </strong> {{size}}, resolution - {{resolution}}, technology
                - {{technology}}, color
                space - {{color_space}}, brightness - {{brightness}}, refresh rate - {{refresh_rate}}. </div>
            {{/with}}
        </div>
        <br>
        <div>
            {{#with graphics}}
            <div><strong class="badge text-bg-info">Graphics: </strong> {{brand}} {{model}} {{memory}} </div>
            {{/with}}
        </div>
        <br>
        <div> <strong class="badge text-bg-warning">Ports: </strong>
            <ul>
                {{#each ports}}
                <li>
                    <div class="badge text-bg-primary"> {{this.type}} ({{this.count}} pcs) </div>
                    <div>
                        <ul>
                            {{#each this.features}}
                            <li class="badge text-bg-secondary">{{this}} </li>
                            {{/each}}
                        </ul>
                    </div>
                </li>
                {{/each}}
            </ul>

        </div>
        <br>
        <div>
            {{#with battery}}
            <div><strong class="badge text-bg-dark">Battery: </strong> {{type}} {{capacity}}. {{life}} </div>
            {{/with}}
        </div>
        <br>
        <div>
            <div><strong class="badge text-bg-dark">Weight: </strong> {{weight}}</div>
            {{#with dimensions}}
            <div><strong class="badge text-bg-dark">Dimensions: </strong> {{width}} x {{depth}} x {{height}} </div>
            {{/with}}
        </div>
        <br>
        <div><strong class="badge text-bg-dark">Operating system: </strong> {{operating_system}}</div>
        <br>
        <div> <strong class="badge text-bg-danger">Accessories: </strong>
            <ul>
                {{#each accessories}}
                <li>
                    <div class="badge text-bg-info"> {{this.name}} ({{this.price}} $) </div>
                </li>
                {{/each}}
            </ul>
        </div>
        {{/with}}
    </div>
</div>

