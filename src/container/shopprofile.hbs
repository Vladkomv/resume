<div class="p-4">
    {{#with navigation}}
    <div class="card">
        <div class="nav">
            {{#each links}}
            <div class="nav-item">
                {{#if href}}
                <a class="nav-link" href="{{href}}">{{text}} </a>
                {{else}}
                <a class="nav-link disabled">{{text}}</a>
                {{/if}}
            </div>
            {{/each}}
        </div>
    </div>
    {{/with}}
    <h1 class="py-3">{{header}} </h1>
    {{#with purchase}}
    <div class="nav nav-tabs mb-2">
        {{#each tabs}}
        <div class="nav-item">
            {{#if isActive}}
            <a class="nav-link active" href="{{href}}">{{this}} </a>
            {{else isDisabled}}
            <a class="nav-link disabled" href="{{href}}">{{this}} </a>
            {{else}}
            <a class="nav-link" href="{{href}}">{{this}} </a>
            {{/if}}
        </div>
        {{/each}}
    </div>
    <div class="row py-3">
        <div class="col-4">
            <input placeholder="{{actionBlock.input.placeholder}}" class="form-control form-control">
        </div>
        <div class="col-8">
            {{#each actionBlock.buttons}}
            {{#if isSuccess}}
            <a class="btn btn-success me-2" href="{{link}}">{{text}}</a>
            {{/if}}
            {{#if isOutline}}
            <a class="btn btn-outline-success me-2" href="{{link}}">{{text}}</a>
            {{/if}}
            {{#if isDanger}}
            <a class="btn btn-outline-danger me-2" href="{{link}}">{{text}}</a>
            {{/if}}
            {{/each}}
        </div>
    </div>
    <hr>
    <div class="py-3">
        {{#each itemList}}
        {{> purchaseItem}}
        {{/each}}
    </div>
    {{/with}}
    <hr>
    {{#with userInfo}}
    <div class="py-3">
        <h3 class="mb-5">{{title}} </h3>
        <div class="card mb-2">
            <div class="card-body mb-2">
                {{#with profileData}}
                <h4>{{title}}</h4>
                <div class="">
                    <div class="card mb-3">
                        <div class="card-body row">
                            {{#with fullName}}
                            <div class="col-4">
                                <div class="">{{surname.title}}</div>
                                <h5>{{surname.value}}</h5>
                            </div>
                            <div class="col-4">
                                <div class="">{{name.title}}</div>
                                <h5>{{name.value}}</h5>
                            </div>
                            <div class="col-4">
                                <div class="">{{middleName.title}}</div>
                                <h5>{{middleName.value}}</h5>
                            </div>
                            {{/with}}
                        </div>
                    </div>
                    <div class="card mb-3">
                        <div class="card-body row">
                            {{#with otherInfo}}
                            <div class="col-4">
                                <div class="">{{birthday.title}}</div>
                                <h5>{{birthday.value}}</h5>
                            </div>
                            <div class="col-4">
                                <div class="">{{sex.title}}</div>
                                <h5>{{sex.value}}</h5>
                            </div>
                            <div class="col-4">
                                <div class="">{{language.title}}</div>
                                <h5>{{language.value}}</h5>
                            </div>
                            {{/with}}
                        </div>
                    </div>
                    {{/with}}
                    <div class="card mb-3">
                        <div class="card-body row">
                            {{#each buttons}}
                            <div class="col-4">
                                {{#if isPrimary}}
                                <a class="btn btn-primary me-1" href="{{link}}">{{text}}</a>
                                {{/if}}
                                {{#if isSecondary}}
                                <a class="btn btn-outline-secondary me-1" href="{{link}}">{{text}}</a>
                                {{/if}}
                                {{#if isDanger}}
                                <a class="btn btn-outline-danger me-1" href="{{link}}">{{text}}</a>
                                {{/if}}
                            </div>
                            {{/each}}
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="card mb-2">
            {{#with recipients}}
            <div class="card-body mb-1">
                <h4 mb-2>{{title}}</h4>
                <div class="row">
                    {{#each users}}
                    <div class="card col-4 me-2">
                        <div class="card-body">
                            <h5>{{name}}</h5>
                            <div class="mb-2">{{phone}}</div>
                            <div class="">
                                <a class="btn btn-primary me-1" href="{{button.link}}">{{button.text}}</a>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                </div>
            </div>
            {{/with}}
        </div>

        <div class="card mb-2">
            {{#with contacts}}
            <div class="card-body mb-1">
                <h4 mb-2>{{title}}</h4>
                <div class="row">
                    {{#each contactData}}
                    <div class="col-4">
                        <div class="card p-2">
                            <div class="card-body">
                                <div>{{title}}</div>
                                <h5 class="mb-2">{{value}}</h5>

                                {{#if button.isPrimary}}
                                <div class="">
                                    <a class="btn btn-primary me-1" href="{{button.link}}">{{button.text}}</a>
                                </div>
                                {{/if}}

                                {{#if button.isSecondary}}
                                <div class="">
                                    <a class="btn btn-outline-secondary me-1" href="{{button.link}}">{{button.text}}</a>
                                </div>
                                {{/if}}

                                {{#if button.isDanger}}
                                <div class="">
                                    <a class="btn btn-outline-danger me-1" href="{{button.link}}">{{button.text}}</a>
                                </div>
                                {{/if}}
                            </div>
                        </div>
                    </div>
                    {{/each}}
                </div>
            </div>
            {{/with}}
        </div>
    </div>
    {{/with}}
    <hr>
    <div class="row p-1">
        {{#each footer}}
        <div class="col-2">
            {{#each this}}
            <div class="nav">
                <div class="nav-item">
                    <a class="nav-link" href="{{link}}">{{text}}</a>
                </div>
            </div>
            {{/each}}
        </div>
        {{/each}}
    </div>
</div>