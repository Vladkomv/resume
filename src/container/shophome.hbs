{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div class="p-4">
    {{#with navigation}}
    <div class="card">
        <div class="nav">
            {{#each links}}
            <div class="nav-item">
                <a class="nav-link" href="{{href}}">{{text}} </a>
            </div>
            {{/each}}
            <div class="nav-link disabled">Disabled</div>
        </div>
    </div>
    {{/with}}
    <div class="row pt-5">
        <div class="col-12 p-4">
            {{#with newsBlock}}
            <h1 class="text-center mb-5">{{title}}</h1>
            <div class="row">
                {{#each cards}}
                <div class="p-1 col-3">
                    <div class="card text-bg-dark ">
                        <div class="card-header">{{title}}
                            {{#if isTop}}
                            <span class="badge rounded-pill text-bg-success ms-2">Топ</span>
                            {{/if}}
                            {{#if isNew}}
                            <span class="badge rounded-pill text-bg-danger ms-1">Нова</span>
                            {{/if}}
                        </div>
                        <div class="card-body">
                            <div>{{description}}</div>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
            {{/with}}
        </div>
        <hr>
        <div class="col-12 my-5">
            {{#with goodsBlock}}
            <div class="nav nav-tabs mb-4">
                {{#each tabs}}
                <div class="nav-item">
                    {{#if isActive}}
                    <a class="nav-link active" href="{{href}}">{{text}} </a>
                    {{else isDisabled}}
                    <a class="nav-link disabled" href="{{href}}">{{text}} </a>
                    {{else}}
                    <a class="nav-link" href="{{href}}">{{text}} </a>
                    {{/if}}
                </div>
                {{/each}}
            </div>
            <div class="row">
                {{#each cards}}
                <div class="col-4 p-1">
                    <div class="card">
                        <img src="{{image}} " alt="{{picture.alt}}" class="card-img-top">
                        <div class="card-body">
                            <div class="card-title row">
                                <h5 class="col-6">{{title}}</h5>
                                <div class="col-6">
                                    {{#if isHot}}
                                    <span class="badge rounded-pill text-bg-warning text-uppercase ms-2">hot!</span>
                                    {{/if}}
                                    {{#if isNew}}
                                    <span class="badge rounded-pill text-bg-primary ms-1">Нове</span>
                                    {{/if}}
                                </div>

                            </div>
                            <p>{{description}} </p>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
            {{/with}}
        </div>
        <hr>
        <div class="col-12 my-5">
            {{#with subscribe}}
            <div class="text-bg-dark p-2">
                <h2>{{header}}</h2>
                <p>{{description}} </p>
                {{#each buttons}}
                <div class="p-2">
                    <a class="btn btn-primary" href="{{link}}">{{text}} </a>
                </div>
                {{/each}}
            </div>
            {{/with}}
        </div>
        <hr>
        <div class="col-12 my-5">
            {{#with service}}
            <div class="text-bg-success p-2">
                <h2 class="text-center">{{title}}</h2>
                <p class="text-center">{{description}} </p>
                {{#each buttons}}
                <div class="text-center p-2">
                    <a class="btn btn-primary" href="{{link}}">{{text}} </a>
                </div>
                {{/each}}
            </div>
            {{/with}}
        </div>
        <hr>
        <div class="row p-1">
            {{#each footer}}
            <div class="col-2">
                {{#each this}}
                <div class="nav">
                    <div class="nav-item">
                        <a class="nav-link" href="{{link}}">{{text}}</a>
                    </div>
                </div>
                {{/each}}
            </div>

            {{/each}}
        </div>
    </div>
</div>

